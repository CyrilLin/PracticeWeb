<div class="container">
  <section>
    <h2>目前提供到编程语言：</h2>
    <hr/>
  </section>

  <section class="row">

    <% @languages.each do |language|%>
    <div class="col-sm-6 col-md-4 col-lg-3 ">
      <div class="thumbnail" style="height: 360px;">
        <a href="#" title="<%= language.name %>"><img class="lazy" src="http://static.bootcss.com/www/assets/img/codeguide.png" width="300" height="150"></a>
        <div class="caption">
          <h3>
            <a class="redLink" href="<%= language_path(language)%>" title="<%= language.desc %>"><%= language.name %><br></a>
          </h3>
          <p>
            <%= language.desc %>
          </p>
        </div>
      </div>
    </div>
    <% end %>

  </section>
</div>